<section class="sessions-userpage">

  <header class="page-header">
    <h1>User Page</h1>
  </header>

  <% if logged_in? %>
    <p>Welcome to Jungle, <%= current_user.firstname %></p>
  <% end %>

  <p>You are not logged in, please <%= link_to 'Login', [:login], class: 'btn btn-info' %> or <%= link_to 'Register', [:new, :user], class: 'btn btn-info' %></p>

</section>